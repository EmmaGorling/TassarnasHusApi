@page
@model LoginModel

@{
    ViewData["Title"] = "Logga in";
}


<div class="container mx-auto max-w-500px">
    <h1 class="text-center fx-bold my-5">@ViewData["Title"]</h1>
    <div class="">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">E-post</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Lösenord</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div class="mb-5">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Logga in</button>
                </div>
                <div>
                    <p>
                        <a class="text-info" id="forgot-password" asp-page="./ForgotPassword">Har du glömt ditt lösenord?</a>
                    </p>
                    <p>
                        <a class="text-info" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrera en ny användare</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
