@model TassarnasHusApi.Models.News

@{
    ViewData["Title"] = "Ta bort artikel";
}

<div class="container max-w-800 mx-auto">
    <h1 class="text-center my-5">@ViewData["Title"]</h1>
    <h3 class="mb-4 text-center text-danger">Är du säker på att du vill ta bort denna artikel?</h3>

    <div class="card shadow-sm p-4 mb-4">
        @if (!string.IsNullOrEmpty(Model.ImageName))
        {
            <div class="text-center mb-5">
                <img src="~/newsImages/@Model.ImageName" alt="Artikelbild" class="img-fluid rounded shadow-sm mt-3" style="max-height: 300px;">
            </div>
        }
        <h4 class="mb-3">@Html.DisplayFor(model => model.Title)</h4>
        <p class="text-muted"><strong>Publicerad:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd")</p>
        <p><strong>Skapad av:</strong> @Html.DisplayFor(model => model.CreatedBy)</p>
        <p>@Html.DisplayFor(model => model.Content)</p>
    </div>
    
    <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">Ta bort</button>
            <a class="btn btn-primary" asp-action="Index">Avbryt</a>
    </form>
</div>
