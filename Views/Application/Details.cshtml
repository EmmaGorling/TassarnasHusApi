@model TassarnasHusApi.Models.Application
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Intresseanm√§lan";
}

<div class="container mt-5 max-w-800 mx-auto">
    <h1 class=" text-center my-5">@ViewData["Title"]</h1>
    <div class="row mb-4">
        <div class="col-md-6">
            <p><span class="fw-semibold text-secondary-emphasis">Namn:</span> @Model.Name</p>
            <p><span class="fw-semibold text-secondary-emphasis">E-post:</span> @Model.Email</p>
            <p><span class="fw-semibold text-secondary-emphasis">Meddelande:</span>
            <br> @Model.Message</p>
            <p><span class="fw-semibold text-secondary-emphasis">Inskickad:</span> @Model.CreatedAt.ToString("d MMMM yyyy", new System.Globalization.CultureInfo("sv-SE"))</p>
            <p><span class="fw-semibold text-secondary-emphasis">Hund:</span> @Model.Dog.Name</p>
            <p
                <span class="fw-semibold text-secondary-emphasis">Hanterad:</span>
                @if (Model.Handeled)
                {
                    <span class="badge bg-success">Ja</span>
                }
                else
                {
                    <span class="badge bg-danger">Nej</span>
                }
            </p>
        </div>
    </div>
    <div class="mt-4">
        @if(SignInManager.IsSignedIn(User)){
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success">Hantera</a>
                <a asp-action="Index" class="btn btn-primary">Tillbaka till listan</a>
            </div>
        }
    </div>
</div>

