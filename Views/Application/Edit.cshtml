@model TassarnasHusApi.Models.Application

@{
    ViewData["Title"] = "Hantera";
}

<h1>Hantera intresseanmälan för </h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Name" />
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Message" />
            <input type="hidden" asp-for="CreatedAt" />
            <input type="hidden" asp-for="DogId" />
            <p>
                <span>Namn: </span> @Model.Name
            </p>
            <p>
                <span>E-post: </span> @Model.Message
            </p>
            <p>
                <span>Meddelande: </span> @Model.Message
            </p>
            <p>
                <span>Inskickad: </span> @Model.CreatedAt.ToString("yyyy-MM-dd")
            </p>
            

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Handeled" /> @Html.DisplayNameFor(model => model.Handeled)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
