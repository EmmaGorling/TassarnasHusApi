@model TassarnasHusApi.Models.Application

@{
    ViewData["Title"] = "Hantera intresseanmälan";
}

<div class="container max-w-1100px mx-auto">
    <h1 class="text-center my-5">@ViewData["Title"]</h1>

    <form class="w-100 max-w-800 mx-auto mb-5" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Name" />
        <input type="hidden" asp-for="Email" />
        <input type="hidden" asp-for="Message" />
        <input type="hidden" asp-for="CreatedAt" />
        <input type="hidden" asp-for="DogId" />

        <div class="card shadow p-4 mb-4">
            <dl class="row">
                <dt class="col-sm-4 fw-bold text-secondary-emphasis">Namn:</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4 fw-bold text-secondary-emphasis">E-post:</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4 fw-bold text-secondary-emphasis">Meddelande:</dt>
                <dd class="col-sm-8">@Model.Message</dd>

                <dt class="col-sm-4 fw-bold text-secondary-emphasis">Inskickad:</dt>
                <dd class="col-sm-8">@Model.CreatedAt.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-4 fw-bold text-secondary-emphasis">Gällande hund:</dt>
                <dd class="col-sm-8">@Model.Dog.Name</dd>
            </dl>
            <div class="form-group form-check my-3 text-center fs-4">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Handeled" /> @Html.DisplayNameFor(model => model.Handeled)
                </label>
            </div>
        </div>

        <div class="form-group text-center mt-4">
            <button type="submit" class="btn btn-success">Spara ändringar</button>
        </div>
    </form>
    <div>
        <a class="btn btn-primary" asp-action="Index">Tillbaka till listan</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
