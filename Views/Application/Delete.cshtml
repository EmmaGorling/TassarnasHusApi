@model TassarnasHusApi.Models.Application

@{
    ViewData["Title"] = "Ta bort intresseanmälan";
}

<div class="container max-w-800 mx-auto">
    <h1 class="text-center my-5">@ViewData["Title"]</h1>
    <h3 class="mb-4 text-center text-danger">Är du säker på att du vill ta bort denna intresseanmälan?</h3>

    <div class="card shadow p-4 mb-4">
        <dl class="row">
            <dt class="col-sm-4 fw-bold text-secondary-emphasis">Namn:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-4 fw-bold text-secondary-emphasis">E-post:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-4 fw-bold text-secondary-emphasis">Meddelande:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Message)</dd>

            <dt class="col-sm-4 fw-bold text-secondary-emphasis">Hanterad:</dt>
            <dd class="col-sm-8">
                @if (Model.Handeled)
                {
                    <span class="badge bg-success">Ja</span>
                }
                else
                {
                    <span class="badge bg-danger">Nej</span>
                }
            </dd>

            <dt class="col-sm-4 fw-bold text-secondary-emphasis">Datum:</dt>
            <dd class="col-sm-8">@Model.CreatedAt.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-4 fw-bold text-secondary-emphasis">Gällande hund:</dt>
            <dd class="col-sm-8">
                @if (Model.Dog != null)
                {
                    @Model.Dog.Name
                }
                else
                {
                    <span class="text-muted">Ingen hund kopplad</span>
                }
            </dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">Ta bort</button>
        <a class="btn btn-primary" asp-action="Index">Avbryt</a>
    </form>
</div>
