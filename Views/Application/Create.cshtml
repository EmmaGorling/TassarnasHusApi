@model TassarnasHusApi.Models.Application

@{
    ViewData["Title"] = "Intresseanmälan";
}

<div class="container max-w-1100px mx-auto">
    <h1 class="text-center  my-5">Intresseanmälan för @ViewBag.dogName</h1>
        <form class="w-100 max-w-800 mx-auto mb-5" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Message" class="control-label"></label>
                <textarea rows=6 asp-for="Message" class="form-control">
                </textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <input type="hidden" name="dogId" id="dogId" asp-for="DogId">
            <div class="form-group text-center mt-4">
                <input type="submit" value="Skicka" class="btn btn-success" />
            </div>
        </form>
    <div>
        <a  class="btn btn-primary" asp-controller="Dog" asp-action="Details" asp-route-id="@Model.DogId">Tillbaka till @ViewBag.dogName</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
