@model IEnumerable<TassarnasHusApi.Models.Dog>

@{
    ViewData["Title"] = "Hundar";
}

<div class="container max-w-1400px">
    <h1 class="text-center my-5">@ViewData["Title"]</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">Lägg till</a>
    </p>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>Bild</th>
                    <th>@Html.DisplayNameFor(model => model.Breed)</th>
                    <th>@Html.DisplayNameFor(model => model.City)</th>
                    <th>@Html.DisplayNameFor(model => model.Sex)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.Age)</th>
                    <th>@Html.DisplayNameFor(model => model.Size)</th>
                    <th>@Html.DisplayNameFor(model => model.Adopted)</th>
                    <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                    <th>Skapad av</th>
                    <th>Åtgärder</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>
                            <img class="img-thumbnail" src="~/dogImages/@Html.DisplayFor(modelItem => item.ImageName)" alt="@item.Name" style="max-width: 120px; max-height: 120px; object-fit: cover;">
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Breed)</td>
                        <td>@Html.DisplayFor(modelItem => item.City)</td>
                        <td>@Html.DisplayFor(modelItem => item.Sex)</td>
                        <td>
                            @* Visar bara en kort beskrivning, max 100 tecken *@
                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                var shortDescription = item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description;
                                <span>@shortDescription</span>
                            }
                            else
                            {
                                <span>Ingen beskrivning tillgänglig</span>
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Age)</td>
                        <td>@Html.DisplayFor(modelItem => item.Size)</td>
                        <td>@Html.DisplayFor(modelItem => item.Adopted)</td>
                        <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedBy)</td>
                        <td>
                            <a class="btn btn-success btn-sm mb-2" asp-action="Edit" asp-route-id="@item.Id">Redigera</a> 
                            <br>
                            <a class="btn btn-info btn-sm mb-2" asp-action="Details" asp-route-id="@item.Id">Detaljer</a> 
                            <br>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Radera</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

